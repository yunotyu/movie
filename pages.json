{
	"easycom": {
			"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
		},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				  "app-plus": {
				                    "titleNView": false //禁用原生导航栏
				                }
                  				
			}
		}
	    ,{
            "path" : "pages/search/search"
        }
        ,{
            "path" : "pages/profile/profile"
        }
        ,{
            "path" : "pages/recommend/recommend",
			"style":{
				"app-plus": {
				                  "titleNView": false //禁用原生导航栏
				              },
				"h5":{
					"titleNView":false
				}			  
			}
        },
		{
		    "path" : "pages/recommend/components/selectCity",
			 "style":{
				  "titleNView": false //禁用原生导航栏
			 }
		}
    ],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "电影预告",
		"navigationBarBackgroundColor": "#FF99CC",
		"backgroundColor": "#FF99CC",
		"enablePullDownRefresh":true,
		"navigationStyle":"custom"
	},
	"tabBar":{
		"selectedColor":"#DD524D",
		"color":"#bfbfbf",
		"fontSize":"14px",
		"list":[{
			"text":"首页",
			"pagePath":"pages/index/index",
			"iconPath":"static/images/home.png",
			"selectedIconPath":"static/images/home_active.png"	
		},
		{
			"text":"搜索",
			"pagePath":"pages/search/search",
			"iconPath":"static/images/search.png",
			"selectedIconPath":"static/images/search_active.png"	
		},
		{
			"text":"推荐",
			"pagePath":"pages/recommend/recommend",
			"iconPath":"static/images/recommend.png",
			"selectedIconPath":"static/images/recommend_active.png"	
		},
		{
			"text":"我的",
			"pagePath":"pages/profile/profile",
			"iconPath":"static/images/my.png",
			"selectedIconPath":"static/images/my_active.png"	
		}]
	}
}
